<h1>Create a new review</h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, :collection => [0, 1, 2, 3, 4, 5] %>
  <%= f.submit "Create review", class: "btn btn-primary" %>
<% end %>
<br>
<%= button_to "Go back", restaurant_path(params[:restaurant_id]), method: "get" %>
